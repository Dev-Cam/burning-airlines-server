

<%= form_with(:model => @flight, :local => true) do |f| %>

    <%= f.label :flight_number %>
    <br>
    <%= f.text_field :flight_number %>
    <br><br>

    <%= f.label :origin %>
    <br>
    <%= f.text_field :origin %>
    <br><br>

    <%= f.label :destination %>
    <br>
    <%= f.text_field :destination %>
    <br><br>

    <%= f.label :date %>
    <br>
    <%= f.date_field :date %>
    <br><br>

    <%= f.label :airplane_id, 'Airplane' %>
    <%= f.select :airplane_id, @airplane_select, :prompt => "Select Plane" %>

 
  <br>
  <br>


  <%= f.submit "Make New Flight" %>


<% end %>

